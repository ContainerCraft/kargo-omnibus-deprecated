```sh
# How to uninstall
kubectl delete -n rook-ceph cephblockpool replicapool
kubectl delete storageclass rook-ceph-block

# cleanup.sh
rm -rf /var/lib/rook
for i in $(fdisk -l | awk '/ceph/{print $2}' | sed 's/://g'); do
  echo "processing $i"
  echo
  dmsetup remove $i
  wipefs -af $i
  echo
done
```
